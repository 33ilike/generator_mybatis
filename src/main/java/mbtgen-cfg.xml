<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<context id="oracel_tables" targetRuntime="MyBatis3">
		<!-- 自定义序列化
		<plugin type="com.bandaoti.mybatis.generator.CustomSerializablePlugin"></plugin>
		 -->
		<!-- oracle/mysql方言插件 -->
		<plugin  type="com.bandaoti.mybatis.generator.CustomPlugin"></plugin>
		
		<!-- 自定义Example类文件名字 
		<plugin type="org.mybatis.generator.plugins.RenameExampleClassPlugin">
			<property name="searchString" value="Example$"/>
			<property name="replaceString" value="EXample"/>
		</plugin>
		-->
		<!-- 注释控制 -->
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
			<property name="suppressDate" value="true" />
		</commentGenerator>
		
		<!-- 数据库连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://192.168.248.219:3307/font-cloud?useUnicode=true&amp;characterEncoding=UTF-8&amp;zeroDateTimeBehavior=convertToNull" 
			userId="root"  
            password="abcd4321" />

		<!-- Oracle自定义类型转换 
		<javaTypeResolver type="org.ihansen.mbtgen.extend.CustJavaTypeResolver">
			<property name="forceBigDecimals" value="false" />
		</javaTypeResolver>-->

		<!-- 数据表对应的实体层 -->
		<javaModelGenerator targetPackage="org.ihansen.jsmta.domain" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!-- sql mapper 隐射配置文件(xml配置文件) -->
		<sqlMapGenerator targetPackage="org.ihansen.jsmta.mapper" targetProject="src/main/resources">
			<property name="enableSubPackages" value="true" />
			<!-- 此属性表示若已存在xml是否和原文件合并 -->
			<property name="isMergeable" value="false"/>
		</sqlMapGenerator>

		<!-- 在ibatis2 中是dao层，但在mybatis3中，其实就是mapper接口 -->
		<javaClientGenerator type="XMLMAPPER" targetPackage="org.ihansen.jsmta.domain.operate" targetProject="src/main/java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>

		<!-- 要对那些数据表进行生成操作，必须要有一个 -->
		<table tableName="t_tag" domainObjectName="Tag">
		</table>
	</context>
</generatorConfiguration>